<tr id="work_session_<%= work_session.id %>">
  <td><%= work_session.id %></td>
  <td><%= work_session.start_time.in_time_zone('Tokyo').strftime('%Y-%m-%d %H:%M:%S') %></td>
  <td><%= work_session.end_time ? work_session.end_time.in_time_zone('Tokyo').strftime('%Y-%m-%d %H:%M:%S') : "作業中" %></td>
  <td>
    <%= button_to '削除', work_session_path(work_session), 
                  method: :delete, 
                  data: { confirm: '本当に削除しますか？' }, 
                  class: 'button delete-button' %>
  </td>
</tr>
