<div>
  <button id="start">作業開始</button>
  <button id="stop">作業終了</button>
</div>
<div id="message"></div>
<h1>作業履歴</h1>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>開始時間</th>
      <th>終了時間</th>
    </tr>
  </thead>
  <tbody>
  <% @work_sessions.each do |session| %>
    <tr>
      <td><%= session.id %></td>
      <td><%= session.start_time.in_time_zone('Tokyo').strftime('%Y-%m-%d %H:%M:%S') %></td>
      <td><%= session.end_time ? session.end_time.in_time_zone('Tokyo').strftime('%Y-%m-%d %H:%M:%S') : "作業中" %></td>
    </tr>
  <% end %>
  
  </tbody>
</table>
